                    <BoxView HeightRequest="100"
                         HorizontalOptions="FillAndExpand"
                         BackgroundColor="#7E1335">
                    </BoxView>

                    <BoxView HeightRequest="100"
                         HorizontalOptions="FillAndExpand"
                         BackgroundColor="#23282d">
                    </BoxView>

                    <BoxView HeightRequest="100"
                         HorizontalOptions="FillAndExpand"
                         BackgroundColor="#7E1335">
                    </BoxView>

                    <BoxView HeightRequest="100"
                         HorizontalOptions="FillAndExpand"
                         BackgroundColor="#23282d">
                    </BoxView>

                </StackLayout>

            </ScrollView>

        </StackLayout>

    </ContentPage.Content>
    
</ContentPage>